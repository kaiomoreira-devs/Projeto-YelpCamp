<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center; font-weight: bolder ;">Cadastro de Camping</h1>
        <div style="width: 30%; margin: 20px auto;">  
            <form action="/camp" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="nome" placeholder="nome do camping">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="imagem" placeholder="imagem url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="preco" placeholder="preço" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="descricao" placeholder="descrição">
                </div>
                    <button class="btn btn-primary btn-lg">Enviar</button>
            </form>
            <h5><a href="/camp">Voltar ao camping</a></h4>
        </div> 
    </div>
</div>

<%- include("../partials/footer") %>